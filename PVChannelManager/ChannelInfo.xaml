<UserControl x:Class="PVChannelManager.ChannelInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVChannelManager"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <local:FillPanal Orientation="Horizontal" >
            <TextBlock x:Name="NameBlock" TextWrapping="Wrap" Text="" VerticalAlignment="Center" TextAlignment="Center" />
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="Hour" HorizontalAlignment="Center" TextWrapping="Wrap" Text="24" />
                <Slider x:Name="HourSlider" Maximum="23" ValueChanged="HourSlider_ValueChanged" Value="20" />
            </StackPanel>
            <Button x:Name="AddShow" Content="Add New Show" Click="AddShow_Click"/>
            <StackPanel>
                <TextBlock Text="Remove Show From Channel" TextAlignment="Center"/>
                <ComboBox x:Name="ShowList" SelectionChanged="ShowList_SelectionChanged"  />
            </StackPanel>
        </local:FillPanal>
</UserControl>
