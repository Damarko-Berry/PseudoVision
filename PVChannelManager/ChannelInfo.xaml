<UserControl x:Class="PVChannelManager.ChannelInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVChannelManager"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="NameBlock" TextWrapping="Wrap" Text="" VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" Height="26" TextAlignment="Center" Margin="0,0,600,0"/>
        <Slider x:Name="HourSlider" Margin="0,0,400,0" Maximum="23" ValueChanged="HourSlider_ValueChanged" Value="20" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="200" />
        <TextBlock x:Name="Hour" HorizontalAlignment="Right" Margin="0,0,494,23" TextWrapping="Wrap" Text="24" VerticalAlignment="Bottom" Height="26"/>
        <Button x:Name="AddShow" Content="Add New Show" HorizontalAlignment="Left" Margin="400,0,0,0" VerticalAlignment="Center" Width="200" Height="50" Click="AddShow_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="600,0,0,0" VerticalAlignment="Center" Width="200" Height="25"/>

    </Grid>
</UserControl>
