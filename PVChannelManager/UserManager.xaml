<Page x:Class="PVChannelManager.UserManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PVChannelManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserManager">

    <local:FillPanal>
        <local:FillPanal Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="New User" TextAlignment="Center" FontSize="30"/>
                <TextBlock Text="Username" TextAlignment="Center" FontSize="20"/>
                <TextBox Name="username"/>
                <TextBlock Text="Password" TextAlignment="Center" FontSize="20"/>
                <TextBox Name="NewPassword"/>
                <Button Name="AddUser" Content="Add User"/>
            </StackPanel>
            <StackPanel/>
        </local:FillPanal>
        <local:FillPanal>
            
        </local:FillPanal>
    </local:FillPanal>
</Page>
