<Page x:Class="PVChannelManager.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PVChannelManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Left">
            <Button x:Name="New" Content="New Channel"   Click="New_Click"/>
            <Button x:Name="Save" Content="Save" Click="Save_Click"/>
            <CheckBox x:Name="ServerStatus" Content="Server: Off"  Checked="ServerStatus_Checked" Unchecked="ServerStatus_Unchecked" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="ChannelList" Height="295" VerticalAlignment="Top" Margin="0,139,0,0"/>
    </Grid>
</Page>
